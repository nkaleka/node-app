<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/nav'); -%>
  <a href="/logout">Logout</a>
  <section>
    <table>
      <thead>
        <th>Customer Name</th>
        <th>Membership number</th>
        <th>Sub Total</th>
        <th>Tax</th>
        <th>Total</th>
        <th>Delete</th>
        <th>Edit</th>
      </thead>
      <tbody>
        <% for(var order of orders) { %>
        <tr>
          <td><%= order.name%></td>
          <td><%=order.memberNumber%></td>
          <td><%=order.quantityDoorBellInput%></td>
          <td><%=order.quantityOutdoorCamerasInput%></td>
          <td><%=order.quantityBabyMonitorsInput%></td>
          <td>$<%=order.subTotal.toFixed(2) %></td>
          <td>$<%=order.tax.toFixed(2) %></td>
          <td>$<%=order.total.toFixed(2) %></td>
          <td><a href="/delete/<%= order._id %>">Delete</a></td>
          <td><a href="/edit/<%= order._id %>">Edit</a></td>
          <!--this will pass the order._id to the id variable in the
            index.js Edit page section and if this id matches then
          the information will be found from the DB and will be passed as
        order object to the edit page-->
        </tr>
        <% } %>
      </tbody>
    </table>
  </section>
</body>
<%- include('layouts/footer'); -%>
